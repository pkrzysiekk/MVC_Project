@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}




<div class="container p-3">
    <div class="row pt-4">
       <div class="col-6">
           <h2 class="text-primary">Books List</h2>
       </div>
        <div class="col-6 text-end" >
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary">
             <i class="bi bi-plus-square-fill"></i> &nbsp; Create New Book   
            </a>

       </div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
           <th>
                Book Title
           </th>
           <th>
               Display Order
           </th>
           <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Title
                    </td>
                         <td width="40%">
                        @obj.DisplayOrder
                        </td>
                        <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Book"asp-action="Edit" asp-route-id="@obj.Id"
                                    class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit </a>
                                        <a asp-controller="Book"asp-action="Delete" asp-route-id="@obj.Id"
                                            class="btn btn-primary mx-2"> <i class="bi bi-trash3"></i>Delete </a>
                        </td>
                </tr>
            }
    </tbody>
</table>
</div>

